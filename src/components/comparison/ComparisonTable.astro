---
import type { ComparisonData } from '@/types/comparison';
interface Props {
  comparison: ComparisonData;
  id?: string;
}

const { comparison, id = 'product-comparison' } = Astro.props;
---

<section class="comparison-section dark:text-neutral-200" id={id}>
  <div class="container mx-auto px-4 py-16 sm:px-6 lg:px-8">
    <div class="comparison-content max-w-7xl mx-auto">
      <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200 dark:divide-gray-700">
          <thead>
            <tr>
              {comparison.headers.map(header => (
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                  {header}
                </th>
              ))}
            </tr>
          </thead>
          <tbody class="divide-y divide-gray-200 dark:divide-gray-700">
            {comparison.features.map(feature => (
              <tr>
                <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900 dark:text-white">
                  {feature.name}
                </td>
                {feature.values.map(value => (
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500 dark:text-gray-400">
                    {value}
                  </td>
                ))}
              </tr>
            ))}
          </tbody>
        </table>
      </div>
    </div>
  </div>
</section>

<style>
  .comparison-group:not(:last-child) {
    border-bottom: 1px solid rgb(229 231 235);
    padding-bottom: 3rem;
  }

  @media (min-width: 768px) {
    .spec-row {
      grid-template-columns: 240px 1fr;
    }
  }

  .spec-value {
    transition: all 0.3s ease;
  }

  .spec-value:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 6px -1px rgb(0 0 0 / 0.1), 0 2px 4px -2px rgb(0 0 0 / 0.1);
  }
</style>