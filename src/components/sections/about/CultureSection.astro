---
import Icon from "@components/ui/icons/Icon.astro";

import { processLiterals } from '@utils/literalProcessor';

interface Value {
  title: string;
  description: string;
  icon: string;
}

interface Props {
  title: string;
  description: string;
  values: Value[];
}

const { title, description, values } = processLiterals<Props>(Astro.props);
---

<section class="mx-auto max-w-[85rem] px-4 py-10 sm:px-6 lg:px-8 lg:py-14 2xl:max-w-full bg-neutral-100 dark:bg-neutral-900">
  <div class="mx-auto max-w-2xl text-center mb-10">
    <h2 class="text-3xl font-bold text-neutral-800 dark:text-neutral-200">
      {title}
    </h2>
    <p class="mt-4 text-neutral-600 dark:text-neutral-400">
      {description}
    </p>
  </div>

  <div class="grid gap-8 sm:grid-cols-2 lg:grid-cols-3">
    {values.map(value => (
      <div class="flex flex-col items-center p-6 bg-white dark:bg-neutral-800 rounded-lg shadow-sm">
        <div class="w-16 h-16 flex items-center justify-center rounded-full bg-orange-100 dark:bg-orange-900">
          <Icon name={value.icon} class="w-8 h-8 text-orange-500" />
        </div>
        <h3 class="mt-4 text-xl font-semibold text-neutral-800 dark:text-neutral-200">
          {value.title}
        </h3>
        <p class="mt-2 text-center text-neutral-600 dark:text-neutral-400">
          {value.description}
        </p>
      </div>
    ))}
  </div>
</section>