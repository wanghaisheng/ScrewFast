---
import MainLayout from "@/layouts/MainLayout.astro";
import MainSection from '@/components/sections/main/HeroSection.astro';
import ComparisonSelector from '@/components/sections/specs/ComparisonSelector.astro';
import ProductProfile from '@/components/sections/specs/ProductProfile.astro';
import ComparisonTable from '@/components/sections/specs/ComparisonTable.astro';
import { droneProducts } from '@/data/products/drones';

// ... other imports and setup
---

<MainLayout {...props}>
  <main>
    <MainSection title="产品规格对比" subTitle="选择需要对比的产品">
      <div class="max-w-7xl mx-auto">
        <ComparisonSelector products={droneProducts} />
        <ProductProfile products={droneProducts} />
        <div id="comparison-content">
          <!-- Comparison table will be loaded here -->
        </div>
      </div>
    </MainSection>
  </main>
</MainLayout>