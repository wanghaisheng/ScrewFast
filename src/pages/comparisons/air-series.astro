---
import Layout from '@/layouts/BaseLayout.astro';
import ComparisonTable from '@/components/comparison/ComparisonTable.astro';
import { airSeriesComparison } from '@/data/comparisons/air-series';
---

<Layout title="DJI Air Series Comparison">
  <main>
    <section class="hero-section bg-neutral-900 text-white py-20">
      <div class="container mx-auto px-4">
        <h1 class="text-4xl md:text-5xl font-bold text-center mb-6">
          DJI Air Series Comparison
        </h1>
        <p class="text-xl text-center text-neutral-300 max-w-2xl mx-auto">
          Compare the features and specifications of DJI Air series drones
        </p>
      </div>
    </section>

    <ComparisonTable comparison={airSeriesComparison} />
  </main>
</Layout>